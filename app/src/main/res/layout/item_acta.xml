<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/acta_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <LinearLayout
            android:id="@+id/layoutTitleData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnAccion" >

            <!-- Número de Acta -->
            <TextView
                android:id="@+id/tvNumeroActa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:lines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/acta_text_title"
                style="@style/ActaTextStyle"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Acta Nº 24000892"/>

            <TextView
                android:id="@+id/tvFechaVisita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:lines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/acta_text_title"
                style="@style/ActaTextStyle"
                tools:text="24 de Junio de 2025"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddressData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitleData"
            app:layout_constraintEnd_toStartOf="@id/btnAccion">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:lines="1"
                android:textSize="12sp"
                style="@style/ActaTextStyle"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="La Gran Manzana"/>

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:lines="1"
                android:textSize="12sp"
                style="@style/ActaTextStyle"
                tools:text="CR 18   60  59"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTypeData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutAddressData"
            app:layout_constraintEnd_toStartOf="@id/btnAccion">


            <TextView
                android:id="@+id/tvEtiqueta"
                tools:text="Establecimiento"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_chip_establecimiento"
                android:textColor="#3d98f4"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAccion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/acta_ver_detalle"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="false"
            app:tint="@color/acta_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>