<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColjuegosSIVO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MyApp.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/input_text_hint</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">#D1D5DB</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_border</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_border</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_border</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:bottomLeftRadius">16dp</item>
        <item name="android:topLeftRadius">16dp</item>
    </style>

</resources>